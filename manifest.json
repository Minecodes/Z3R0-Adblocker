{
    "name": "Z3R0",
    "version": "1.0.0.2",
    "manifest_version": 2,
    "description": "An simple adblocker.",
    "author": "Minecodes",
    "developer": {
        "name": "Minecodes",
        "url": "https://github.com/Minecodes"
    },
    "incognito": "not_allowed",
    "icons": {
      "32": "icons/32x32.png",
      "48": "icons/48x48.png",
      "128": "icons/128x128.png"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "browser_action": {
        "default_icon": {
            "32": "icons/32x32.png",
            "48": "icons/48x48.png",
            "128": "icons/128x128.png"
        },
        "default_title": "Z3R0",
        "default_popup": "pages/popup.html"
    },
    "permissions": [
        "tabs",
        "storage",
        "webRequest",
        "webNavigation",
        "webRequestBlocking",
        "activeTab",
        "*://*/*"
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "zero.dcbot@gmail.com",
            "strict_min_version": "88.0"
        }
    }
}